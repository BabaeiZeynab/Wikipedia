<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"


   >


    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardViewTrend"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:strokeWidth="0.5dp"
        android:layout_marginTop="10dp"
        app:strokeColor="@color/light_gray"
        android:clickable="true"


        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_trend"
                android:layout_width="270dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="cover"
                android:scaleType="fitXY"
                android:src="@drawable/img_apls">

            </ImageView>

            <TextView
                android:id="@+id/txt_trend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="Alpas Mountains"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp">

            </TextView>



            <LinearLayout
                android:id="@+id/expandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:text="Born "
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/txt_trend_born"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:maxLines="1"
                        android:text="August 16, 1958 (age 63)"
                        android:textColor="#6F6D6D"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:text="Years Active"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/txt_trend_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:maxLines="1"
                        android:text="1979–present"
                        android:textColor="#6F6D6D"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life and career"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/txt_trend_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="4"
                        android:text="Madonna Louise Ciccone was born on August 16, 1958, in Bay City, Michigan, to Catholic parents Madonna Louise (née Fortin) and Silvio Anthony Tony Ciccone.[4][5] Her father's parents were Italian emigrants from Pacentro while her mother was of French-Canadian descent.[6] Tony Ciccone worked as an engineer designer for Chrysler and General Motors."
                        android:textColor="@color/light_black"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/trendInsight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="+260 K"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:textStyle="bold">
            </TextView>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
